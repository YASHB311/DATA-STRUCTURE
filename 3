//Queue linklist
#include <stdio.h>
#include <stdlib.h>
struct node
{
    int data;
    struct node*next;
};
struct node*F=NULL;
struct node*R=NULL;
void insert(int val)
{
    struct node*newnode=malloc(sizeof(struct node));
    newnode->data=val;
    newnode->next=NULL;
    if(F==NULL&&R==NULL)
    {
        F=R=newnode;
    }
    else
    {
        R->next=newnode;
        R=newnode;
    }
}
void delete()
{
    struct node *ptr;
    if(F==NULL)
    {
        printf("queue is empty");
    }
    else
    {
        ptr=F;
        F=F->next;
        free(ptr);
    }
}
void display()
{
   struct node *ptr=F;
   while(ptr)
   {
       printf("%d\n",ptr->data);
       ptr=ptr->next;
   }
   printf("no elements");
}
int main()
{
    int choice,num;
    printf("\n 1.INSERT:");
    printf("\n 2.DELETE:");
    printf("\n 3.DISPLAY:");
    printf("\n 4.EXIT:");
    while(1)
    {
        printf("\n enter choice:");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:printf("insert the data");
                   scanf("%d",&num);
                   insert(num);
                   break;
            case 2: delete();
                     break;
            case 3:display();
                    break;
            case 4:exit(0);
                 break;
        }
    }
}
